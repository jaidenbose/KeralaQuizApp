@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background-color: #f8f9fa; 
        font-family: Arial, sans-serif;
        text-align: center;
        padding: 50px;
    }

    .container {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 36px;
        font-weight: bold;
        color: #007bff; 
    }

    p {
        font-size: 20px;
        color: #333;
        margin-bottom: 30px;
    }

    .btn-start {
        font-size: 24px;
        padding: 15px 30px;
        border-radius: 5px;
        background-color: #28a745; 
        color: white;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-start:hover {
            background-color: #218838; 
        }
</style>

<div class="container">
    <h2>Welcome to the Kerala Quiz App</h2>
    <p>Test your knowledge about Kerala by taking this fun quiz!</p>
    <a href="@Url.Action("Start", "Quiz")" class="btn-start">Start Quiz</a>
</div>
