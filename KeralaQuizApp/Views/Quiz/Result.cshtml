@{
    ViewData["Title"] = "Quiz Result";
}

<style>
    body {
        background-color: #f8f9fa; 
        font-family: Arial, sans-serif;
        text-align: center;
        padding: 50px;
    }

    .container {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 36px;
        font-weight: bold;
        color: #007bff; 
    }

    p {
        font-size: 20px;
        color: #333;
        margin-bottom: 30px;
    }

    .score {
        font-size: 28px;
        font-weight: bold;
        color: #28a745; 
        margin-bottom: 20px;
    }

    .result-message {
        font-size: 22px;
        color: #dc3545; 
        margin-bottom: 30px;
    }

    .btn-home, .btn-retry {
        font-size: 24px;
        padding: 15px 30px;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        margin: 10px;
    }

        .btn-home:hover, .btn-retry:hover {
            background-color: #0056b3; 
        }
</style>

<div class="container">
    <h2>Quiz Completed</h2>

    <div class="score">
        Your Score: @ViewBag.Score out of 10
    </div>

    <div class="result-message">
        @ViewBag.Message
    </div>

    <!-- Retry Button -->
    <a href="@Url.Action("Start", "Quiz")" class="btn-retry">Retry</a>

    <!-- Back to Home Button -->
    <a href="@Url.Action("Index", "Home")" class="btn-home">Back to Home</a>
</div>
